              <input id="lastName" type="text" class="col-xs-12" placeholder="Doe" required>
            </div>
          </div>

        </fieldset>

        <fieldset>
          <label class="control-label">Address:</label>
          <input id="addressLine1" type="text" class="col-xs-12" placeholder="Address Line 1" required>

          <input id="addressLine2" type="text" class="col-xs-12" placeholder="Address Line 2">

          <div class="row">

            <div class="control-group col-xs-8">
              <input id="postalCode" type="text" class="col-xs-12" placeholder="Postal Code">
            </div>

            <div class="control-group col-xs-4">
              <input id="city" type="text" class="col-xs-12" placeholder="City" required>
            </div>

          </div>



          <div class="controls controls-row">
            <select required>
              <option disabled selected="selected">Country</option>
              <option>Bangladesh</option>
              <option>France</option>
              <option>Switzerland</option>
              <option>United Kingdom</option>
              <option>United States</option>
            </select>
          </div>

        </fieldset>

        <fieldset>

          <label class="control-label">Phone Numbers</label>

          <div class="row">
          <div class="control-group col-xs-6">
            <div class="controls">
              <div class="input-append">
                <input id="phoneHome" type="tel" class="col-xs-10" placeholder="Home" required>
                <span class="add-on"><i class="icon-home"></i></span>
              </div>

              <span class="help-block">eg: +41 (12) 3456 7890</span>
            </div>
          </div>

          <div class="control-group col-xs-6">
            <div class="controls">
              <div class="input-append">
                <input id="phoneMobile" type="tel" class="col-xs-10" placeholder="Mobile">
                <span class="add-on"><i class="icon-home"></i></span>
              </div>

              <span class="help-block">eg: +41 (12) 3456 7890</span>
            </div>
          </div>
          </div>


        </fieldset>


        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="cancel" class="btn btn-secondary">Cancel</button>
        </div>

      </form>


