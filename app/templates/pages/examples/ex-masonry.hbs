            <label class="control-label" for="firstName">First Names</label>
            <div class="controls">
              <input id="firstName" type="text" class="col-xs-12" placeholder="John" required>
            </div>
          </div>

          <div class="control-group col-xs-6">
            <label class="control-label" for="lastName">Last Name</label>
